[Trigger]
Operation = Install
Operation = Upgrade
Operation = Remove
Type = Package
Target = *

[Action]
Description = Checking for security alerts...
Depends = curl
Depends = openssl
Depends = arch-audit
When = PostTransaction
Exec = /usr/bin/env sh -c "/usr/bin/arch-audit -f '%n: %s (%c)' | sed 's/^/- /'"
