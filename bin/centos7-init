#!/usr/bin/env bash

# Prepare a CentOS7 machine as server, from minimal installation

# Bash strict mode (https://github.com/alphabetum/bash-boilerplate)
set -eEuo pipefail
trap 'echo "Aborting due to errexit on line $LINENO. Exit code: $?" >&2' ERR
IFS=$'\n\t'

# Lock down /tmp, /var/tmp, and /dev/shm
awk '!/^#/ && ($2 == "/tmp") { if(!match($4, /nodev/)) $4=$4",nodev" } 1' \
	/etc/fstab > /tmp/new_fstab
mv /tmp/new_fstab /etc/fstab
awk '!/^#/ && ($2 == "/tmp") { if(!match($4, /noexec/)) $4=$4",noexec" } 1' \
	/etc/fstab > /tmp/new_fstab
mv /tmp/new_fstab /etc/fstab
awk '!/^#/ && ($2 == "/tmp") { if(!match($4, /nosuid/)) $4=$4",nosuid" } 1' \
	/etc/fstab > /tmp/new_fstab
mv /tmp/new_fstab /etc/fstab
echo '/tmp   /var/tmp  none   bind,rw,nodev,noexec,nosuid   0 0' >> /etc/fstab
echo 'tmpfs  /dev/shm  tmpfs  defaults,nodev,noexec,nosuid  0 0' >> /etc/fstab

# Install EPEL repository
yum -y install epel-release

# Install ripgrep COPR repository
yum-config-manager --add-repo=https://copr.fedorainfracloud.org/coprs/carlwgeorge/ripgrep/repo/epel-7/carlwgeorge-ripgrep-epel-7.repo

# Remove unwanted items
yum -y erase aic94xx-firmware alsa* chrony firewalld iwl*firmware postfix 

# Update everything
yum -y update

# Install necessary items
yum -y install aide aria2 bash-completion bind-utils deltarpm fail2ban git \
	htop lsof ntp psmisc ripgrep vim-enhanced tmux yum-{cron,utils}

# Install VM tools as needed
if dmesg | grep -q "Hypervisor detected: KVM"; then
	yum -y install qemu-guest-agent
	systemctl enable qemu-guest-agent
fi

# Function to install Filebeat (Elastic Stack)
install_filebeat() {
	rpm --import https://packages.elastic.co/GPG-KEY-elasticsearch
	cat > /etc/yum.repos.d/elastic.6.repo <<EOL
[elastic-6.x]
name=Elastic repository for 6.x packages
baseurl=https://artifacts.elastic.co/packages/6.x/yum
gpgcheck=1
gpgkey=https://artifacts.elastic.co/GPG-KEY-elasticsearch
enabled=1
autorefresh=1
type=rpm-md
EOL
	yum -y install filebeat
	while true; do
		read -r -p "Start Filebeat at next boot? [y/N]: " -n 1 ins
		printf '\n'
		case $ins in
			[Yy]* ) systemctl enable filebeat; break;;
			[Nn]* ) break;;
			"" ) break;;
		esac
	done
}

# Install Filebeat as desired
while true; do
	read -r -p "Install Filebeat for Elastic Stack? [y/N]: " -n 1 ins
	printf '\n'
	case $ins in
		[Yy]* ) install_filebeat; break;;
		[Nn]* ) break;;
		"" ) break;;
	esac
done

# Git the dotfiles
dir="$(pwd)"
cd "$HOME" || exit
git clone https://github.com/nstickney/dotfiles
cd -- dotfiles || exit
./install
cd "$dir" || exit

# Basic firewall
~/dotfiles/bin/iptables-init
