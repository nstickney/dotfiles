#! /usr/bin/env bash
case "$(xset q 2>/dev/null | grep LED | sed s/[^1-9]//g)" in
        '1')
        printf '%s' "-A-"
        ;;
        '2')
        printf '%s' "1--"
        ;;
        '3')
        printf '%s' "1A-"
        ;;
        '4')
        printf '%s' "--|"
        ;;
        '5')
        printf '%s' "-A|"
        ;;
        '6')
        printf '%s' "1-|"
        ;;
        '7')
        printf '%s' "1A|"
        ;;
        *)
        printf '%s' "---"
esac
