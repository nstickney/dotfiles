#!/usr/bin/env bash

# This Source Code Form is subject to the terms of the Mozilla Public
# License, v. 2.0. If a copy of the MPL was not distributed with this
# file, you can obtain one at http://mozilla.org/MPL/2.0/.

# Bash strict mode (https://github.com/alphabetum/bash-boilerplate)
set -eEuo pipefail
trap 'echo "Aborting (errexit line $LINENO). Exit code: $?" >&2' ERR

usage() {
	printf 'Usage: %s filename\n' "$(basename "$0")" >&2
	printf ' -h --help : display this message\n' >&2
	exit
}

main() {
	for i in $("$HOME"/dotfiles/bin/sway-get-active-outputs); do
		local _dir
		_dir="$(realpath "$1")"
		local _img
		_img="$(find "$_dir" ! -wholename "$_dir" | shuf -n 1)"
		swaymsg "output $i bg $_img fill ${2:-#111111}"
	done
}

_pos_args=()
while [ "$#" -gt 0 ]; do
	case "$1" in
		'--help'|'-h') usage;;
		*) _pos_args+=("$1"); shift;;
	esac
done
main "${_pos_args[@]}"
