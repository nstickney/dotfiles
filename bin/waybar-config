#!/usr/bin/env bash

# This Source Code Form is subject to the terms of the Mozilla Public
# License, v. 2.0. If a copy of the MPL was not distributed with this
# file, you can obtain one at http://mozilla.org/MPL/2.0/.

# Bash strict mode (https://github.com/alphabetum/bash-boilerplate)
set -eEuo pipefail
trap 'echo "Aborting (errexit line $LINENO). Exit code: $?" >&2' ERR

usage() {
	printf 'Usage: %s\n' "$(basename "$0")" >&2
	printf ' -h --help : display this message\n' >&2
	exit
}

main() {

	# Prepare the list of modules
	local _mods_right='"modules-right": ["network", "cpu", "temperature", "memory",'

	# Put in the defaults
	cat <<-EOF >"$HOME"/.config/waybar/config
		{
		    // Universal module configuration
		    "battery": {
		        "states": {
		            "warning": 32,
		            "critical": 8
		        },
		        "format": "{icon} {capacity}% {time}",
		        "format-charging": "ğŸ”Œ{icon}",
		        "format-plugged": "ï‡¦",
		        "format-icons": ["ï‰„", "ï‰ƒ", "ï‰‚", "ï‰", "ï‰€"]
		    },
		    "clock": {
		        "format": "{:%a %Y.%m.%d %H:%M:%S}",
		        "interval": 1,
		        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
		    },
		    "cpu": {
		        "format": "ï‹› {usage}%",
		        "interval": 1
		    },
		    "idle_inhibitor": {
		        "format": "{icon}",
		        "format-icons": {
		            "activated": "ï®",
		            "deactivated": "ï°"
		        }
		    },
		    "memory": {
		        "format": "ğŸ–¸ {}%",
		        "states": {
		            "warning": 68,
		            "critical": 92
		        }
		    },
		    "network": {
		        "format-wifi": "ï‡« {ipaddr}/{cidr} ({essid} {signalStrength}%)",
		        "format-ethernet": "ğŸ–§ {ipaddr}/{cidr}",
		        "format-linked": "ï± (No IP)",
		        "format-disconnected": "ï± Disconnected"
		    },
		    "pulseaudio": {
		        // "scroll-step": 1, // %, can be a float
		        "format": "{icon} {volume}% {format_source}",
		        "format-bluetooth": "ïŠ”{icon} {volume}% {format_source}",
		        "format-bluetooth-muted": " ïŠ”{icon} {format_source}",
		        "format-muted": "ğŸ”‡{format_source}",
		        "format-source": "ï„° {volume}%",
		        "format-source-muted": "ï„±",
		        "format-icons": {
		            "headphone": "ï€¥",
		            "hands-free": "ï–",
		            "headset": "ï–",
		            "phone": "ï‚•",
		            "portable": "ï‚•",
		            "car": "ï†¹",
		            "default": ["ï€¦", "ï€§", "ï€¨"]
		        },
		        "on-click": "pavucontrol"
		    },
		    "temperature": {
		        "critical-threshold": 64,
		        "format": "{icon} {temperatureC}Â°C",
		        "format-icons": ["â„", "ï‹‰", "ğŸ”¥"]
		    },
		    "tray": {
		        "icon-size": 22,
		        "spacing": 2
		    },
			// Per-host module configuration
	EOF

	# Add disk blocks for each physical filesystem
	for i in $(mount | grep -e btrfs -e ext -e vfat -e xfs -e zfs | cut -f3 -d' '); do
		cat <<-EOF >>"$HOME"/.config/waybar/config
			    "disk#$i": {
			        "format": "ï‚  {percentage_used}%",
			        "path": "$i",
			        "tooltip-format": "{path}: {used}/{total} ({percentage_free}% free)"
			    },
		EOF
		_mods_right+=" \"disk#$i\","
	done

	# Finalize list of modules
	_mods_right+=' "battery", "pulseaudio", "clock", "idle_inhibitor", "tray"]'

	cat <<-EOF >>"$HOME"/.config/waybar/config

		    // Overall configuration options
		    "layer": "top", // Popups over other windows
		    "margin-bottom": 1,
		    "modules-left": ["sway/workspaces", "sway/mode"],
		    "modules-center": ["sway/window"],
		    $_mods_right
		}
	EOF

}

[ "$#" -gt 0 ] && usage
main
